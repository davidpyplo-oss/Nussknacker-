  <script>
    /* ===== Hilfsfunktionen ===== */
    const $ = s => document.querySelector(s);

    /* ===== Nav: Mobile Toggle ===== */
    const nav = $('#nav');
    const menuBtn = $('#menuBtn');
    menuBtn?.addEventListener('click', () => {
      const open = nav.classList.toggle('open');
      menuBtn.setAttribute('aria-expanded', String(open));
    });

    /* ===== Theme Toggle (persistiert in localStorage) ===== */
    const themeToggle = $('#themeToggle');
    const applyTheme = (t) => { if(t==='light') document.documentElement.setAttribute('data-theme','light'); else document.documentElement.removeAttribute('data-theme'); };
    const savedTheme = localStorage.getItem('theme');
    if (savedTheme) applyTheme(savedTheme);
    themeToggle?.addEventListener('click', (e) => {
      e.preventDefault();
      const now = document.documentElement.getAttribute('data-theme') === 'light' ? 'dark' : 'light';
      applyTheme(now);
      localStorage.setItem('theme', now);
      themeToggle.setAttribute('aria-pressed', String(now==='light'));
    });

    /* ===== Jahr im Footer ===== */
    $('#year').textContent = new Date().getFullYear();

    /* ===== Pledge: lokal speichern ===== */
    const pledgeForm = $('#pledgeForm');
    const pledgeMsg = $('#pledgeMsg');
    const pledgeKey = 'pledge-v1';
    const loadPledge = () => {
      try{
        const s = JSON.parse(localStorage.getItem(pledgeKey)||'{}');
        for(const [k,v] of Object.entries(s)){ const el = pledgeForm.querySelector(`[name="${k}"]`); if(el) el.checked = !!v; }
      }catch{}
    };
    loadPledge();
    pledgeForm?.addEventListener('submit', (e)=>{
      e.preventDefault();
      const data = Object.fromEntries(new FormData(pledgeForm).entries());
      for(const k in data){ data[k] = true; } // Checkboxen => true, wenn gesetzt
      localStorage.setItem(pledgeKey, JSON.stringify(data));
      pledgeMsg.textContent = 'Versprechen gespeichert. Danke f√ºrs Mitmachen! üíö';
    });
    $('#pledgeClear')?.addEventListener('click', ()=>{
      localStorage.removeItem(pledgeKey);
      pledgeForm.reset();
      pledgeMsg.textContent = 'Zur√ºckgesetzt.';
    });

    /* ===== Report-Form: Validierung & Vorschau (nur lokal) ===== */
    const reportForm = $('#reportForm');
    const reportErrors = $('#reportErrors');
    const reportPreview = $('#reportPreview');

    const validateEmail = (v)=> !v || /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(v);

    reportForm?.addEventListener('submit', (e)=>{
      e.preventDefault();
      reportErrors.textContent = '';
      const fd = new FormData(reportForm);
      const required = ['ort','datum','beschreibung'];
      const missing = required.filter(k => !String(fd.get(k)||'').trim());
      const email = String(fd.get('email')||'').trim();
      const errs = [];
      if(missing.length) errs.push('Bitte f√ºlle alle Pflichtfelder (*) aus.');
      if(!validateEmail(email)) errs.push('Bitte gib eine g√ºltige E-Mail an oder lasse das Feld leer.');

      if(errs.length){
        reportErrors.textContent = errs.join(' ');
        reportPreview.style.display = 'none';
        return;
      }

      // Dateiliste nur als Namen (wird nicht hochgeladen)
      const files = [...(fd.getAll('anhang')||[])].filter(f => f && f.name).map(f => `‚Ä¢ ${f.name} (${(f.size/1024|0)} KB)`).join('\n') || '‚Äî';

      const summary =
`MELDUNG ‚Äì ANTI-MOBBING
=====================
Datum/Eingang: ${new Date().toLocaleString()}
Name (optional): ${fd.get('name')||'‚Äî'}
E-Mail: ${email||'‚Äî'}

Ort/Plattform: ${fd.get('ort')}
Vorfallszeit: ${fd.get('datum')}
Beschreibung:
${fd.get('beschreibung')}

Anh√§nge (lokal):
${files}

Weiteres Vorgehen:
1) Vertrauensperson informieren
2) Beweise sicher archivieren
3) Verantwortliche Stelle kontaktieren (Schule/HR/Beratungsstelle)
`;

      reportPreview.textContent = summary;
      reportPreview.style.display = 'block';
      // Optional: automatisches Kopieren f√ºr schnelles Einf√ºgen in E-Mail
      try{ navigator.clipboard.writeText(summary); }catch{}
      reportErrors.textContent = '';
    });

    /* ===== Tastatur-Shortcuts ===== */
    document.addEventListener('keydown', (e)=>{
      if(e.key==='t'){ window.scrollTo({top:0, behavior:'smooth'}); }
      if(e.key==='g'){ document.querySelector('#fakten')?.scrollIntoView({behavior:'smooth'}); }
      if(e.key==='/'){ /* Browser-Suche √∂ffnen */ }
    });

    /* ===== Sanftes Scrollen f√ºr interne Links ===== */
    document.querySelectorAll('a[href^="#"]').forEach(a=>{
      a.addEventListener('click', (e)=>{
        const id = a.getAttribute('href');
        const target = document.querySelector(id);
        if(target){ e.preventDefault(); target.scrollIntoView({behavior:'smooth'}); }
      });
    });
  </script>
</body>
</html>
